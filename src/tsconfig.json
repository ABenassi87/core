{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "../dist",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2016"
    ],
    "noImplicitAny": true,
    "inlineSources": true,
    "noEmitHelpers": false,
    "declaration": true,
    "stripInternal": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "../typings.d.ts",
    "./index.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../dist",
    "strictMetadataEmit": true
  }
}
